<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".UbicacionesFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtUbic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion 1"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/txtUbic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion 2"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/txtUbic3"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion 3"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/txtUbic4"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion 4"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />

        </LinearLayout>
    </ScrollView>

</FrameLayout>